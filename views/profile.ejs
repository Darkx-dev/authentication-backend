<body class="bg-black text-white flex flex-col relative max-md:block">

  <aside class="md:border-r-2 border-[#363636] w-[16%] max-md:w-full z-50 flex md:flex-col md:px-5 md:py-10 fixed max-md:border-t-2 left-0 md:top-0 bottom-0">
    <%- include('./sidebar.ejs', {user}) %>
  </aside>

  <main class="flex flex-col absolute -z-10 max-md:z-[initial] max-md:relative max-md:w-full top-0 right-0 w-[80%] max-md:pt-10">
    <nav class="flex justify-between md:hidden p-3 max-md:fixed top-0 left-0 right-0">
      <button onclick="handleSettingsPopUp()" class="user__settings ">
        <svg class="w-[22px]" xmlns="http://www.w3.org/2000/svg" fill="#fff" viewBox="0 0 512 512">
